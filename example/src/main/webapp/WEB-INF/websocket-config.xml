<?xml version="1.0" encoding="UTF-8"?>
<websocket-config  dynamicAddressing="true" 
	xmlns="http://kasource.org/schema/websocket" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://kasource.org/schema/websocket 
    					http://wigforss.github.io/Ka-Websocket/schema/0.4/core/websocket-config.xsd">
    
    <websocket servletName="chat" dynamicAddressing="true"/>
    <originWhitelist>
    	<origin>http://localhost:8080</origin>
     </originWhitelist>
    <authenticationProvider provider="org.kasource.web.websocket.security.PassthroughAutenticationProvider"/>
</websocket-config>	